<html>
    <head>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <style>
            {#asset invoice-styles.css @encoding=utf8}
        
        </style>
        
    </head>
    <body>
        <div class="invoice-box">
            <table cellpadding="0" cellspacing="0">
                <tr class="top">
                    <td colspan="4">
                        <table>
                            <tr>
                                <td class="title">
                                    <img src="{#asset invoice-logo.png @encoding=dataURI}" style="width:100%; max-width:300px;" />
                                </td>
                                <td>
                                    
                                    Invoice #: {{number}}
                                    <br> Created: {{now}}
                                    <br> Due: {{nowPlus20Days}}
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr class="information ">
                    <td colspan="4 ">
                        <table>
                            <tr>
                                <td></td>
                                <td>
                                    {{buyer.name}}<br>
                                    {{buyer.road}}<br>
                                    {{buyer.country}}
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr class="heading ">
                    <td>
                        Nombre
                    </td>
                    <td>
                        Unidades
                    </td>
                    <td>
                        Precio Unitario
                    </td>
                    <td>
                        Precio Final
                    </td>
                </tr>
                {{#each items}}
                <tr class="item">
                    <td>
                        {{nombre}}
                    </td>
                    <td>
                        {{unidades}}&emsp;&emsp;   
                    </td>
                    <td>
                       &emsp; $ {{precio}}
                    </td>
                    <td>
                        $ {{final precio  unidades}}
                    </td>

                </tr>
                {{/each}}
                <tr class="total ">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        Total: ${{total items}}
                    </td>
                </tr>
            </table>
        </div>
    </body>
</html>
